<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/im_group_details_title_layout"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/app_white">

        <ImageView
            android:id="@+id/im_group_details_back_image"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/im_group_details_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="群资料"
            android:textColor="@color/app_black"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/im_group_details_name_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/app_white"
        android:layout_below="@+id/im_group_details_title_layout"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/im_group_details_name_title_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="群名称"
            android:gravity="center"
            android:textColor="@color/app_black"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/im_group_details_name_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/app_gray"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/im_group_details_notice_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_white"
        android:layout_below="@+id/im_group_details_name_layout"
        android:layout_marginTop="1dp">

        <TextView
            android:id="@+id/im_group_details_notice_title_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="群公告"
            android:gravity="center_vertical"
            android:textColor="@color/app_black"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:background="@color/app_white"/>
        <TextView
            android:id="@+id/im_group_details_notice_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/app_gray"
            android:textSize="16sp"
            android:layout_below="@+id/im_group_details_notice_title_text"
            android:layout_margin="10dp"
            android:background="@color/app_white"

            />
    </RelativeLayout>

    <TextView
        android:id="@+id/im_group_details_group_count_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/im_group_details_notice_layout"
        android:textColor="@color/app_black"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:background="@color/app_white"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/im_group_details_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/app_white"
        android:layout_below="@+id/im_group_details_group_count_text">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/im_group_details_view_more_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="查看更多"
        android:layout_below="@+id/im_group_details_recyclerView"
        android:textColor="@color/app_black"
        android:textSize="18sp"
        android:layout_marginTop="1dp"
        android:background="@color/app_white"
        android:gravity="center"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/im_group_details_btn"
        android:text="退出/解散"
        android:textColor="@color/app_white"
        android:textSize="20sp"
        android:background="@mipmap/yes_botton"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>